{
  "$schema": "http://json-schema.org/draft/2019-09/schema#",
  "$anchor": "tags",
  "description": "Adds tag metadata to an existing schema",
  "$merge": {
    "with": {
      "properties": {
        "tags": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "isObjectId": true
          }
        }
      }
    }
  }
}
