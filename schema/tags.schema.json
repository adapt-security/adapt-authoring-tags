{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$anchor": "tags",
  "description": "Adds tag metadata to an existing schema",
  "$merge": {
    "with": {
      "properties": {
        "tags": {
          "title": "Tags",
          "description": "Add tags by entering one or more words, separated with a comma (,)",
          "type": "array",
          "default": [],
          "uniqueItems": true,
          "items": {
            "type": "string",
            "isObjectId": true
          },
          "_backboneForms": "Tags"
        }
      }
    }
  }
}
